<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show/post</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>

<body>
    <div class="w-full px-10 py-3 flex justify-between bg-zinc-800 text-white items-center">
        <h3>Pinterest</h3>
        <div class="flex gap-10 items-center ">
            <a href="/profile">Profile</a><a href="/">Home</a><a class="px-3 py-2 bg-red-700 text-white rounded-lg"
                href="/logout">Logout</a>
        </div>
    </div>

   
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <%posts.forEach(function(elem) { %>
        <div class="card w-32">
        <div class="w-full h-40 rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%=elem.image%>" alt="">
        </div>
        <h5 class="mt-2 text-sm"> <%=elem.title %></h5>
        <h6 class="text-xs opacity-500">@<%= elem.user.username %></h6>
        </div>
        <% }) %>
        </div>
        </div>

</body>

</html>